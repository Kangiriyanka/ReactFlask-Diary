{
  "name": "diary",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "backend": "cd backend && .venv/bin/flask run --no-debugger",
    "create-venv": "cd backend && python3 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "create-env": "cd backend && test -f .env || echo  \"SECRET_KEY=\\nDATABASE_URL=\\nDATABASE_TRACKING=False\\nFLASK_APP=diary.py\\nFLASK_ENV=development\" > .env",
    "r": "concurrently \"npm run backend\" \"npm run dev\""
  },
  "dependencies": {
    "axios": "^1.6.4",
    "html-react-parser": "^5.2.4",
    "quill": "^2.0.3",
    "quill-table-better": "^1.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "sass": "^1.77.4",
    "viject": "^1.3.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "vite": "^6.3.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
